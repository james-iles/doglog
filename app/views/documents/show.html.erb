<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">

      <div class="mb-4">
        <h1 class="mb-3"><%= @document.title %></h1>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <div class="mb-3">
            <h5 class="text-muted">Content</h5>
            <p><%= @document.content %></p>
          </div>

          <div class="mb-3">
            <h5 class="text-muted">Category</h5>
            <p><%= @document.category %></p>
          </div>
        </div>
      </div>

      <% if @document.photos.attached? %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title mb-3">Photos</h5>
            <div class="row g-3">
              <% @document.photos.each do |photo| %>
                <div class="col-md-6">
                  <%= cl_image_tag photo.key,
                                   height: 300,
                                   width: 400,
                                   crop: :fill,
                                   class: "img-fluid rounded" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="document-actions mt-5">
        <%= link_to edit_document_path(@document),
                class: "btn btn-warning",
                title: "Edit document" do %>
          <i class="fa-regular fa-pen-to-square"></i>
        <% end %>

        <%= link_to document_path(@document),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-danger",
                title: "Delete document" do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </div>


    </div>
  </div>
</div>
