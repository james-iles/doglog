<div id="documentsindex" class="container-fluid p-0">
  <div class="row justify-content-center">
    <div class="col-12 my-2">
      <!-- Toggle button for mobile -->
      <button class="btn btn-outline-secondary cancel-btn w-100 d-md-none mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#documentsSearchCollapse">
        <i class="bi bi-search"></i> Search & Filter
      </button>

      <!-- Collapsible search form -->
      <div class="collapse d-md-block" id="documentsSearchCollapse">
        <%= form_with url: dog_documents_path,
                      method: :get,
                      data: {
                        turbo_frame: "documents_list",
                        turbo_action: "advance",
                        controller: "search-form"
                      },
                      class: "row g-2 align-items-center" do %>

          <div class="col-12 col-md-4">
             <%= text_field_tag :query,
                  params[:query],
                  class: "form-control bg-white",
                  placeholder: "Search with keywords...",
                  data: { action: "input->search-form#submit" }
              %>
          </div>

          <div class="col-12 col-md-4">
            <%= select_tag :category,
                options_for_select([
                  ['All Categories', 'all'],
                  ['Medical', 'Medical'],
                  ['Training', 'Training'],
                  ['Grooming', 'Grooming'],
                  ['Nutrition', 'Nutrition'],
                  ['Behavior', 'Behavior'],
                  ['Chat', 'Chat'],
                  ['Other', 'Other']
                ], params[:category] || 'all'),
                class: "form-select bg-white",
                data: { action: "change->search-form#submit" } %>
          </div>

          <div class="col-6 col-md-2">
            <%= submit_tag "Search", name: "", class: "btn btn-primary search-btn w-100" %>
          </div>

          <div class="col-6 col-md-2">
            <%= link_to "Clear",
                dog_documents_path,
                class: "btn cancel-btn w-100",
                data: { turbo_frame: "documents_list" },
                title: "Clear all filters" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Header with navigation -->
  <div class="d-flex justify-content-between align-items-center mb-3 px-3">
    <h1 class="mb-0 fw-bold" style="color: white;  -webkit-text-stroke: 0.1px #5C3A5E;">All Doguments</h1>

    <div class="d-flex gap-3 align-items-center">
      <%= link_to new_dog_document_path(@dog), class: "text-dark" do %>
        <i class="fa-solid fa-plus icon text-white"></i>
      <% end %>
    </div>
  </div>

  <!-- Category Filter Bar -->
  <div class="category-filter-wrapper mb-4">
    <div class="category-filter-scroll d-flex gap-3 px-3 pb-2">
      <%= link_to dog_documents_path(@dog),
          class: "category-filter-item #{'active' if params[:category].blank? || params[:category] == 'all'}",
          data: { turbo_frame: "_top" } do %>
        <div class="category-icon">
          <i class="fa-solid fa-border-all"></i>
        </div>
        <span>All</span>
      <% end %>

      <% Document::CATEGORIES.each do |category| %>
        <%= link_to dog_documents_path(@dog, category: category),
            class: "category-filter-item #{'active' if params[:category] == category}",
            data: { turbo_frame: "_top" } do %>
          <div class="category-icon">
            <i class="<%= category_icon(category) %>"></i>
          </div>
          <span><%= category %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Documents List -->
  <div class="row">
    <% @documents.each do |document| %>
      <div class="col-12 col-md-4 mb-3">
        <%= link_to document_path(document), title: "View document", class: "text-tertiary action-icon text-decoration-none" do %>
        <div class="card border-0 shadow-sm hover-shadow" style="transition: all 0.3s ease;">
          <div class="card-body d-flex align-items-center justify-content-between py-3 px-4">
            <div class="flex-grow-1">
              <h5 class="mb-2 fw-semibold" style="font-size: 1.1rem; color: #2c3e50;">
                <%= document.title %>
              </h5>
              <span class="badge rounded-pill badge-highlight" style="font-weight: 500; font-size: 0.75rem; padding: 0.35rem 0.75rem;">
                <%= document.category %>
              </span>
            </div>
            <!-- Action icons - visible on hover -->



          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
