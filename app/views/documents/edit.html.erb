<div class="container">
  <h1>Edit your document</h1>
  <%= simple_form_for @document do |f| %>
    <%= f.input :title,
                label: "Title",
                placeholder: "e.g. Vaccination Record" %>

    <%= f.input :content,
                as: :text,
                label: "Content/Notes",
                placeholder: "Add your notes here..." %>

    <%= f.input :category,
            collection: Document::CATEGORIES,
            prompt: "Select a category" %>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div class="d-flex gap-2 my-5">
      <%= f.submit "Update Document", class: "btn btn-warning btn-lg" %>
      <%= link_to "Cancel", document_path(@document), class: "btn btn-secondary btn-lg" %>
    </div>
   <% end %>
</div>
