<div class="container">
  <%= link_to root_path do %>
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>

  <h1 class="my-3" id="chat_title"><%= @chat.title %></h1>

  <div id="messages">
    <% @chat.messages.each do |message| %>
      <% if message.role == "user" %>
        <div class="d-flex justify-content-end mb-2">
          <div class="bg-white px-3 pb-1 pt-1 rounded-pill">
            <%= message.content %>
          </div>
        </div>
      <% elsif message.role == "assistant" %>
        <div class="d-flex justify-content-start mb-5">
          <div class="px-3 pb-0 pt-3">
            <%= message.content %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="new_message_container">
    <%= simple_form_for [@chat, @message] do |f| %>
      <%= f.input :content, label: "Ask a question", required: true, placeholder: "What's up?" %>
      <%= f.button :submit, "Ask", class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="d-flex gap-2">
    <%= button_to save_summary_chat_path(@chat), method: :post, class: "btn btn-outline-primary my-3" do %>
      <i class="fa-solid fa-file-arrow-down"></i> End and save summary
    <% end %>
    <%= button_to chat_path(@chat), method: :delete, class: "btn btn-outline-secondary my-3",
        data: { turbo_confirm: "End chat without saving?" } do %>
      <i class="fa-solid fa-xmark"></i> End without saving
    <% end %>
  </div>
</div>
