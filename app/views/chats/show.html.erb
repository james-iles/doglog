<div id="chat" class="d-flex flex-column" style="height: calc(100dvh - 80px);">
  <div class="container-fluid chat-head border-bottom">
    <div class="d-flex align-items-center gap-2 py-2 mb-2">
      <div class="d-flex justify-content-between align-items-center gap-3 p-2 chat-card">
      <% if @chat.dog.photo.attached? %>
        <%= image_tag @chat.dog.photo, class: "rounded-circle flex-shrink-0", style: "width: 56px; height: 56px; object-fit: cover;", alt: @chat.dog.name %>
      <% end %>
      <h1 class="mb-0" id="chat_title"><%= @chat.title %></h1>
    </div>
    </div>
    <div class="d-flex justify-content-between align-items-center gap-3 pb-2">
      <%= button_to save_summary_chat_path(@chat), method: :post, class: "btn p-0" do %>
        <i class="fa-solid fa-file-arrow-down me-1"></i> Save Summary
      <% end %>
      <%= button_to chat_path(@chat), method: :delete, class: "btn p-0",
          data: { turbo_confirm: "End chat without saving?" } do %>
        <i class="fa-solid fa-xmark fa-lg text-danger me-1"></i> End Chat
      <% end %>
    </div>
      </div>

  <div class="flex-grow-1 overflow-auto container pt-3" id="messages" data-controller="scroll-bottom">
    <% @chat.messages.each do |message| %>
      <% if message.role == "user" %>
        <div class="d-flex justify-content-end mb-2">
          <div class="px-3 py-2 user-bubble">
            <%= message.content %>
          </div>
        </div>
      <% elsif message.role == "assistant" %>
        <div class="d-flex justify-content-start mb-3">
          <div class="px-3 py-2 response-pill">
            <%= message.content %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container py-2 mb-1">
    <%= simple_form_for [@chat, @message], html: { class: "d-flex align-items-stretch gap-2" } do |f| %>
      <div class="flex-grow-1 mb-0">
        <%= f.input :content, label: false, required: true, placeholder: "Let's chat about #{@chat.dog.name}...", wrapper: false, input_html: { class: "form-control h-100 bg-white input-radius" } %>
      </div>
      <%= f.button :submit, "Ask", class: 'btn btn-primary ask-button border border-dark' %>
    <% end %>
  </div>
</div>
