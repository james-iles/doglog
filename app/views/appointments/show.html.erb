<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Appointment Details</h3>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-4">
              <strong>Start Date & Time:</strong>
            </div>
            <div class="col-sm-8">
              <%= @appointment.start_time.strftime("%B %d, %Y at %H:%M") %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong>End Date & Time:</strong>
            </div>
            <div class="col-sm-8">
              <%= @appointment.end_time.strftime("%B %d, %Y at %H:%M") %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong>Duration:</strong>
            </div>
            <div class="col-sm-8">
              <%= distance_of_time_in_words(@appointment.start_time, @appointment.end_time) %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong>Host:</strong>
            </div>
            <div class="col-sm-8">
              <%= @appointment.host %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-4">
              <strong>Location:</strong>
            </div>
            <div class="col-sm-8">
              <%= @appointment.location %>
            </div>
        </div>

        <div class="card-footer">
          <div class="d-flex gap-2">
            <%= link_to "Edit", edit_appointment_path(@appointment), class: "btn btn-warning" %>
            <%= link_to "Delete", "/appointments/#{@appointment.id}",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
