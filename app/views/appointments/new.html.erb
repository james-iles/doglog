<div class="container">
  <h1>Create an appointment</h1>
  <%= simple_form_for [@dog, @appointment],
    html: {
      data: {
        controller: 'flatpickr'
      }
    } do |f| %>
    <%= f.input :title,
                label: "Title",
                placeholder: "e.g. Vaccination" %>

    <%= f.input :location,
                as: :text,
                label: "Location" %>

    <%= f.input :start_time,
    as: :string,
    label: "Start Date and Time",
    input_html: {
      class: "form-control",
      data: {
        flatpickr_target: 'startDateInput'
      },
      required: true
    } %>

    <%= f.input :end_time,
    as: :string,
    label: "End Date and Time",
    input_html: {
      class: "form-control",
      data: {
        flatpickr_target: 'endDateInput'
      },
      required: true
    } %>

    <%= f.input :host,
                label: "Host",
                placeholder: "Doctor Miller" %>

    <%= f.input :appointment_type,
                collection: Appointment::TYPES,
                prompt: "Select type" %>

    <%= f.input :appointment_notes,
                label: "Notes",
                as: :text,
                placeholder: "Do not forget the Vaccination Passport" %>

    <div class="d-flex gap-2 my-5">
      <%= f.submit "Save", class: "btn btn-warning btn-lg" %>
      <%= link_to "Cancel", dog_appointments_path(@dog), class: "btn btn-secondary btn-lg" %>
    </div>
  <% end %>
</div>
