<h1><%= @dog.name %></h1>

<p>
  <strong>Breed:</strong>
  <%= @dog.breed %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @dog.gender %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @dog.weight %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @dog.dob.strftime("%d %b %Y") if @dog.dob %>
</p>


<%= link_to "Edit Dog", edit_dog_path(@dog) %> |
<%= link_to "Back to Dogs List", household_dogs_path(@dog.household) %> |
<%= link_to "Delete Dog", dog_path(@dog),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

<!-- Add this Share Profile button -->
  <div class="mt-3">
    <%= link_to new_dog_shareable_profile_path(@dog), class: "btn btn-primary" do %>
      <i class="bi bi-share"></i> Share Profile
    <% end %>

    <!-- If there's an active share link, show it -->
    <% if @dog.current_share_profile %>
      <%= link_to dog_shareable_profile_path(@dog, @dog.current_share_profile),
                  class: "btn btn-success" do %>
        <i class="bi bi-link"></i> View Active Share Link
      <% end %>
    <% end %>
  </div>
