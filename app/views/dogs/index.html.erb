<div class="text-center">
  <%= image_tag "doglog-text.png", class: "dogs-index-logo" %>
</div>

<div class="dogs-gallery">
  <% @dogs.each do |dog| %>
    <div class="dog-photo-card">
      <%= link_to dog_path(dog) do %>
        <div class="dog-photo-wrapper">
          <% if dog.photo.attached? %>
            <%= image_tag dog.photo, alt: dog.name %>
          <% else %>
            <%= image_tag "pawprint.jpg", alt: "No photo available" %>
          <% end %>
          <div class="overlay">
            <div class="dog-name-overlay"><%= dog.name %></div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="add-link">
    <%= link_to new_household_dog_path(@household) do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>

<div class="dashboard-button">
  <%= link_to dashboard_path, class: "btn btn-primary btn-lg" do %>
    <i class="fa-solid fa-house-user"></i> Dashboard
  <% end %>
</div>
